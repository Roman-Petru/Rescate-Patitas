        <ul class="nav navbar-nav navbar-right">
            {{#if usuario}}
                 <li><a href="#"><span class="glyphicon glyphicon-user"></span> ¡Hola {{usuario.usuario}}, bienvenido a Rescate de Patitas!</a> </li>>
