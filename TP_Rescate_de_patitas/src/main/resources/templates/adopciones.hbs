!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://kit.fontawesome.com/27517fada0.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Lexend+Deca&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="/js/generales.js"></script>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/usuarios.estilos.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>Adopciones</title>
</head>
<body id="body">

{{> nav.hbs}}

<div class="main_container">
    <h1 class="encabezado"><i class="fas fa-users"></i> Adopciones</h1>
    <input type="text" name="" value="" placeholder="Buscar" id="inputUsuario">

    <table class="tabla" id="tabla">
        <thead>
        <th>Foto</th>
        <th><i class="fas fa-user"></i> Nombre</th>
        <th>Mascota</th>
        <th><i class="fas fa-tools"></i> Acciones</th>
        </thead>
        <tbody>
        {{#each publicaciones}}
            <tr>
                <td>Foto</td>
                <td>{{mascota.nombre}}</td>
                <td>{{mascota.tipo}}</td>
                <td>
                    <a href="#" name="button" class="btn" style="width:80px;">Adoptar</a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
</body>

</html>
