<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://kit.fontawesome.com/27517fada0.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Lexend+Deca&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="/js/generales.js"></script>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/usuarios.estilos.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>Publicaciones - Mascotas en Adopción</title>
</head>
<body id="body">

{{> nav.hbs}}

<div class="main_container">
    <h1 class="encabezado"><i class="fas fa-users"></i> Publicaciones - Mascotas en Adopción </h1>
    <input type="text" name="" value="" placeholder="Buscar" id="inputUsuario">
    <table class="tabla" id="tabla">
        <thead>
        <th>Foto</th>
        <th>Nombre</th>
        <th>Edad</th>
{{#if voluntarioOAdmin}}  <th>Estado</th> {{/if}}
        <th><i class="fas fa-tools"></i> Acciones</th>
        </thead>
        <tbody>
        {{#each publicaciones}}
            {{#if voluntarioOAdmin}}
                <tr>
                <td> <img src="data:image/jpeg;charset=utf-8;base64, {{primeraFoto}}" width="200" height="300" alt="Imagen Mascota"></td>
                <td>{{mascota.nombre}}</td>
                <td>{{mascota.edadAproximada}}</td>
            {{#if voluntarioOAdmin}}    <td>{{estadoActual}}</td>   {{/if}}
                <td>
                    <a href="../verPublicacionDarAdopcion/{{id}}" name="button" class="btn" style="width:140px;">Ver detalles</a>
                 {{#if voluntarioOAdmin}}
                    {{#if activa}} <a href="/pausar/{{id}}" name="button" class="btn" style="width:90px;">Pausar</a>
                    {{else}}
                        <a href="/activar/{{id}}" name="button" class="btn" style="width:90px;">Activar</a>{{/if}}
                 {{/if}}
                </td>
            </tr>
            {{else}}   {{#if activa}}
                <tr>
                    <td> <img src="data:image/jpeg;charset=utf-8;base64, {{primeraFoto}}" width="200" height="300" alt="Imagen Mascota"></td>
                    <td>{{mascota.nombre}} </td>
                    <td>{{mascota.edadAproximada}}</td>
                    {{#if voluntarioOAdmin}}    <td>{{estadoActual}}</td>   {{/if}}
                    <td>
                        <a href="../verPublicacionDarAdopcion/{{id}}" name="button" class="btn" style="width:140px;">Ver detalles</a>
                        {{#if voluntarioOAdmin}}
                            {{#if activa}} <a href="/pausar/{{id}}" name="button" class="btn" style="width:90px;">Pausar</a>
                            {{else}}
                                <a href="/activar/{{id}}" name="button" class="btn" style="width:90px;">Activar</a>{{/if}}
                        {{/if}}
                    </td>
                </tr>
              {{/if}}
            {{/if}}
        {{/each}}
        </tbody>
    </table>
</div>
</body>


</html>